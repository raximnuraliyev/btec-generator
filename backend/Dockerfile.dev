# Backend Development Dockerfile
# BTEC Generator - Node.js + TypeScript API with Hot Reload

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy Prisma schema
COPY prisma ./prisma

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Create exports directory
RUN mkdir -p exports

# Expose port
EXPOSE 3000

# Start with tsx watch for hot reload
CMD ["npm", "run", "dev"]
