# =============================================================================
# BTEC GENERATOR - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER
POSTGRES_PASSWORD
POSTGRES_DB
# For Docker: use 'postgres' as hostname
# For local development: use 'localhost'
DATABASE_URL=postgresql://

# =============================================================================
# AI API (OpenRouter / Claude)
# =============================================================================
OPENROUTER_API_KEY
AI_MODEL
AI_MAX_TOKENS

# =============================================================================
# DISCORD BOT
# =============================================================================
DISCORD_BOT_TOKEN
DISCORD_CLIENT_ID
DISCORD_CLIENT_SECRET
DISCORD_PUBLIC_KEY
DISCORD_APPLICATION_ID
DISCORD_ADMIN_CHANNEL_ID
DISCORD_GUILD_ID

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET
JWT_EXPIRES_IN

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS
RATE_LIMIT_MAX_REQUESTS
GENERATION_LIMIT_PER_HOUR

# =============================================================================
# CORS (Frontend URLs)
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN
FRONTEND_URL
