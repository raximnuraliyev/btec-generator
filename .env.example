# =============================================================================
# BTEC Generator - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control!

# =============================================================================
# Database
# =============================================================================
DATABASE_URL="postgresql://btec:btec_dev_password@localhost:5432/btec_generator"
POSTGRES_USER=btec
POSTGRES_PASSWORD=btec_dev_password
POSTGRES_DB=btec_generator

# =============================================================================
# Redis (Job Queue)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Server
# =============================================================================
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# Authentication
# =============================================================================
# Generate a secure random string: 
JWT_SECRET=MYBdhh0Oq5qzlucXOf8bfdA6lX+cTSv8c7ZgaZOxyCM
JWT_EXPIRES_IN=7d

# =============================================================================
# AI / OpenRouter API
# =============================================================================
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key

# Default AI model (optional - configured in database)
AI_MODEL=anthropic/claude-3.5-sonnet

# =============================================================================
# Discord Bot (Optional)
# =============================================================================
# Create a bot at https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_GUILD_ID=your-discord-guild-id

# =============================================================================
# Frontend Environment Variables
# =============================================================================
# These are used by Vite during build
VITE_API_URL=/api
VITE_WS_URL=ws://localhost:3001
